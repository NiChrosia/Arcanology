{
  "schemaVersion": 1,
  "id": "arcanology",
  "version": "${version}",

  "name": "Arcanology",
  "description": "A mod focused on integrating magic with technology.",
  "authors": [
    "NiChrosia"
  ],
  "contact": {
    "homepage": "https://github.com/NiChrosia/Arcanology",
    "sources": "https://github.com/NiChrosia/Arcanology"
  },

  "license": "CC0-1.0",
  "icon": "assets/arcanology/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "arcanology.common.Arcanology"
      }
    ],
    "client": [
      {
        "adapter": "kotlin",
        "value": "arcanology.client.ClientArcanology"
      }
    ]
  },

  "mixins": [
    "arcanology.mixins.json"
  ],

  "accessWidener": "arcanology.accesswidener",

  "depends": {
    "fabricloader": ">=0.8.7",
    "fabric": ">=0.42.0",
    "fabric-language-kotlin": "*",
    "minecraft": "1.18.x",
    "team_reborn_energy": "*",
    "advanced_runtime_resource_pack": ">=0.5.2",
    "libgui": "*",
    "nucleus": ">=0.2.3",
    "patchouli": "*",
    "ktdatataglib": ">=1.6.4-1"
  },
  "suggests": {
    "flamingo": "*"
  }
}